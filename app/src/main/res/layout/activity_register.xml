<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login"
    android:padding="30dp">

    <com.dingdangmao.wetouch.Bean.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/civ"
        android:src="@drawable/totoro"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_username"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/civ"
        android:layout_marginTop="60dp"
        android:hint="用户名"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:drawableLeft="@drawable/baseline_face_black_24"
        android:drawablePadding="5dp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_username"
        android:layout_marginTop="30dp"
        android:hint="密码"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:drawableLeft="@drawable/baseline_lock_black_24"
        android:inputType="textPassword"
        android:drawablePadding="5dp" />、

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_confirm_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_password"
        android:layout_marginTop="30dp"
        android:hint="确认密码"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:drawableLeft="@drawable/baseline_lock_black_24"
        android:inputType="textPassword"
        android:drawablePadding="5dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_confirm_password"
        android:background="@drawable/btn"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/et_username"
        android:text="确认" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_confirm_password"
        android:layout_alignRight="@+id/et_username"
        android:layout_marginTop="40dp"
        android:text="取消"
        android:background="@drawable/btn"/>

</RelativeLayout>