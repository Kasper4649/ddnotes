<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dingdangmao.wetouch.Reset">
    <ImageView
        android:id="@+id/iv"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="80dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tip"
            android:textSize="18sp"
            android:text="请输入原始密码"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.andrognito.pinlockview.IndicatorDots
            android:id="@+id/dot"
            android:layout_marginTop="30dp"
            app:dotDiameter="12dp"
            app:dotSpacing="16dp"
            app:indicatorType="fillWithAnimation"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.andrognito.pinlockview.PinLockView
            android:layout_gravity="center_horizontal"
            android:id="@+id/pin"
            app:keypadTextSize="16dp"
            app:keypadButtonSize="50dp"
            app:keypadVerticalSpacing="15dp"
            app:keypadHorizontalSpacing="20dp"
            app:keypadButtonBackgroundDrawable="@drawable/bg2"
            app:keypadDeleteButtonSize="50dp"
            app:keypadShowDeleteButton="true"
            app:keypadDeleteButtonPressedColor="#C8C8C8"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
